{
  "extends": "tslint:latest",
  "rules": {
    "no-this-assignment": false,
    "max-line-length": [
      true,
      {
        "limit": 150,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "no-console": [
      true,
      "dir",
      "log",
      "warn"
    ],
    "space-before-function-paren": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "adjacent-overload-signatures": true,
    "member-access": [
      false
    ],
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "object-literal-sort-keys": false,
    "max-classes-per-file": [
      true,
      30
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "align": [
      true,
      "statements"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "no-object-literal-type-assertion": false,
    "no-shadowed-variable": [
      true,
      {
        "class": true,
        "enum": true,
        "function": true,
        "interface": true,
        "namespace": true,
        "typeAlias": false,
        "typeParameter": false
      }
    ],
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "no-submodule-imports": false,
    "no-return-await": false
  }
}

